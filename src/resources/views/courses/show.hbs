<div class="mt-4">
    <div class="row">
        <div class="col-lg-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{ course.name }}</h5>
                    <p class="card-text">{{ course.description }}</p>
                    <p class="card-text">Thời lượng khóa: <b>{{ course.duration }}</b> giờ</p>
                </div>
            </div>
        </div>
        <div class="col-lg-8">
            <h2>{{ course.name }}</h2>
            <iframe width="560" height="315" src="https://www.youtube.com/embed/{{course.videoCode}}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>
    </div>
</div>