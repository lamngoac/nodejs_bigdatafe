<div class="mt-4">
    <div>
      <h3>Học viên đã xóa</h3>
      <a href="/me/stored/students">Danh sách học viên</a>
    </div>
    <table class="table mt-4">
        <thead>
            <tr>
            <th scope="col">STT</th>
            <th scope="col">Tên học viên</th>
            <th scope="col">Mã học viên</th>
            <th scope="col">Khóa</th>
            <th scope="col">Chức năng</th>
            </tr>
        </thead>
        <tbody>
            {{#each students}}
            <tr>
            <th scope="row">{{sum @index 1}}</th>
            <td>{{this.fullName}}</td>
            <td>{{this.studentsCode}}</td>
            <td>{{this.deletedAt}}</td>
            <td>
                <a href="" class="btn btn-link btn-restore" data-id="{{this._id}}">Khôi phục</a>
                <a href="" class="btn btn-link" data-toggle="modal" data-id="{{this._id}}" data-target="#delete-course-modal">Xóa vĩnh viễn</a>
            </td>
            </tr>
            {{else}}
            <tr>
              <td colspan="5" class="text-center">
                Không có học viên bị xóa.
              </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

{{!--Confirm for deleting course--}}
<div id="delete-course-modal" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Xóa học viên ?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Bạn chắc chắn muốn xóa vĩnh viễn học viên này ?</p>
      </div>
      <div class="modal-footer">
        <button id="btn-delete-course" type="button" class="btn btn-danger">Xóa bỏ</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy bỏ</button>
      </div>
    </div>
  </div>
</div>

{{!--Form delete course--}}
<form class="mt-4" method="POST" name="delete-course-form"></form>

{{!--Restore course--}}
<form class="mt-4" method="POST" name="restore-course-form"></form>

{{!--Scripts--}}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        var studentId;
        var btnRestore = $('.btn-restore');
        var btnDeleteCourse = document.getElementById('btn-delete-course');
        var deleteCourseForm = document.forms['delete-course-form'];
        var restoreCourseForm = document.forms['restore-course-form'];

        $('#delete-course-modal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            studentId = button.data('id');
        })

        btnDeleteCourse.onclick = function() {
            deleteCourseForm.action = '/students/' + studentId + '/force?_method=DELETE';
            deleteCourseForm.submit();
        }

        btnRestore.click(function(e) {
          e.preventDefault();
          var studentId = $(this).data('id');
          restoreCourseForm.action = '/students/' + studentId + '/restore?_method=PATCH';
          restoreCourseForm.submit();
        });
    });
</script>